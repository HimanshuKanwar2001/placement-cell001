<form action="/company/create" method="post">
  <label for="companyName">Company Name:</label>
  <input type="text" name="name" id="companyName" placeholder="Enter Comapny Name" required>
    <label for="companyDate">Company Date:</label>
  <input type="date" name="date" id="companyDate" placeholder="Enter Date" required>
  <input type="submit" value="Add Interiew">
</form>


<div class="show-result-data">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Company ID</th>
        <th scope="col">Company Name</th>
        <th scope="col">Date</th>
        
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% let count =1 %>
      <% for(company of all_company) { %>
      <tr>
        <th scope="row"><%= count++ %></th>
        <td><%= company.name %></td>
        <td><%= company.date %></td>
        <td><a href="/company/destroy/<%= company._id %>">Delete</a></td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
